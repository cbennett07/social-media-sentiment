# ===================
# COLLECTOR SERVICE
# ===================

# Queue
REDIS_URL=redis://localhost:6379
QUEUE_TOPIC=raw_content

# NewsAPI (https://newsapi.org/)
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_ENABLED=true

# Reddit (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SentimentCollector/1.0
REDDIT_SUBREDDITS=["news", "worldnews", "technology"]
REDDIT_ENABLED=true

# RSS
RSS_ENABLED=true
# RSS feeds are configured in config.py by default

# Twitter/X (https://developer.twitter.com/)
# Requires Basic tier ($100/month) for meaningful volume
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ENABLED=true
TWITTER_MAX_RESULTS=100

# ===================
# PROCESSOR SERVICE
# ===================

# LLM Provider ("anthropic" or "openai")
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
# LLM_MODEL=claude-sonnet-4-20250514  # Optional, uses provider default

# Object Storage (S3-compatible)
STORAGE_BUCKET=sentiment-raw-content
STORAGE_ENDPOINT_URL=http://localhost:9000  # For MinIO local dev
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sentiment

# Processing
BATCH_SIZE=10
SKIP_EXISTING=true
USE_REDIS_STREAMS=false

# ===================
# API SERVICE
# ===================

# CORS (comma-separated origins or JSON array)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
