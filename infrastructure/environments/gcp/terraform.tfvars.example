# GCP Configuration
project_id  = "your-gcp-project-id"
region      = "us-central1"
environment = "dev"

# Container images (update with your registry)
collector_image = "gcr.io/your-project/sentiment-collector:latest"
processor_image = "gcr.io/your-project/sentiment-processor:latest"
api_image       = "gcr.io/your-project/sentiment-api:latest"

# LLM Provider
llm_provider = "anthropic"

# Instance sizing (dev defaults, increase for prod)
db_tier        = "db-f1-micro"
redis_tier     = "BASIC"
redis_memory_gb = 1

# API Keys - use terraform.tfvars or environment variables
# TF_VAR_newsapi_key=xxx
# TF_VAR_reddit_client_id=xxx
# TF_VAR_reddit_client_secret=xxx
# TF_VAR_anthropic_api_key=xxx
# TF_VAR_openai_api_key=xxx
