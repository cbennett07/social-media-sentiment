# AWS Configuration
region      = "us-east-1"
environment = "dev"

# Container images (update with your registry)
collector_image = "123456789.dkr.ecr.us-east-1.amazonaws.com/sentiment-collector:latest"
processor_image = "123456789.dkr.ecr.us-east-1.amazonaws.com/sentiment-processor:latest"
api_image       = "123456789.dkr.ecr.us-east-1.amazonaws.com/sentiment-api:latest"

# LLM Provider
llm_provider = "anthropic"

# Instance sizing (dev defaults, increase for prod)
db_instance_class = "db.t3.micro"
redis_node_type   = "cache.t3.micro"

# API Keys - use terraform.tfvars or environment variables
# TF_VAR_newsapi_key=xxx
# TF_VAR_reddit_client_id=xxx
# TF_VAR_reddit_client_secret=xxx
# TF_VAR_anthropic_api_key=xxx
# TF_VAR_openai_api_key=xxx
